{
  "openapi" : "3.0.0",
  "servers" : [ {
    "description" : "Development",
    "url" : "http://localhost:5000/api/v1"
  } ],
  "info" : {
    "description" : "Basic read-only API for Mother Tongues dictionaries",
    "version" : "1.0.0",
    "title" : "Mother Tongues Dictionary API",
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags" : [ {
    "name" : "languages",
    "description" : "Fetch language data"
  } ],
  "paths" : {
    "/languages" : {
      "get" : {
        "tags" : [ "languages" ],
        "summary" : "searches inventory",
        "operationId" : "searchInventory",
        "description" : "By passing in the appropriate options, you can search for\navailable languages\n",
        "parameters" : [ {
          "in" : "query",
          "name" : "available",
          "description" : "show available languages",
          "required" : false,
          "schema" : {
            "type" : "boolean"
          }
        }, {
          "in" : "query",
          "name" : "only-config",
          "description" : "only show config from specified language",
          "required" : false,
          "schema" : {
            "type" : "boolean"
          }
        }, {
          "in" : "query",
          "name" : "only-data",
          "description" : "only show data from specified language",
          "required" : false,
          "schema" : {
            "type" : "boolean"
          }
        }, {
          "name" : "name",
          "in" : "query",
          "description" : "slug ID (tag) of specified languages",
          "required" : false,
          "schema" : {
            "$ref" : "#/components/schemas/LanguageTags"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "search results matching criteria"
          },
          "400" : {
            "description" : "bad input parameter"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "LanguageTags" : {
        "type" : "string",
        "enum" : [ "test" ]
      }
    }
  }
}