         </listitem>
         <listitem id="lid95e24" remap="li">
            <para remap="#PCDATA">Screw driver set</para>
         </listitem>
         <listitem id="lid95e27" remap="li">
            <para remap="#PCDATA">Wrench set</para>
         </listitem>
         <listitem id="lid95e30" remap="li">
            <para remap="#PCDATA">Nails and screws</para>
         </listitem>
         <listitem id="lid95e33" remap="li">
            <para remap="#PCDATA">Level</para>
         </listitem>
         <listitem id="lid95e37" remap="li">
            <para remap="#PCDATA">Saws</para>
         </listitem>
         <listitem id="lid95e40" remap="li">
            <para remap="#PCDATA">Drill</para>
         </listitem>
         <listitem id="lid95e43" remap="li">
            <para remap="#PCDATA">Air pressure guage</para>
         </listitem>
         <listitem id="lid95e46" remap="li">
            <para remap="#PCDATA">Spade</para>
         </listitem>
         <listitem id="lid95e49" remap="li">
            <para remap="#PCDATA">Rake</para>
