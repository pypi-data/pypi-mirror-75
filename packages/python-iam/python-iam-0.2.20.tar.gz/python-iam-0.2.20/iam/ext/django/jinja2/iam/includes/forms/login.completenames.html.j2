<form
  action="{{ url(iam_urls.forms.names) }}"
  method="POST"
  class="submit-inplace"
>
  <div class="form-group">{{ csrf_input }}
    <input name="first_name"
      type="text"
      required="true"
      {% if form.first_name|default(None) %}
      class="form-control{% if form.first_name.errors %} is-invalid{% endif %}"
      {% else %}
      class="form-control"
      {% endif %}
      maxlength="64"
      placeholder="{{ _('First name') }}"
      {% if form.first_name|default(None) and form.first_name.value() %}
      value="{{ form.first_name.value() }}"
      {% endif %}
    />
    {% if form.first_name|default(None) and form.first_name.errors %}
    <p class="invalid-feedback">{{ form.first_name.errors[0] }}</p>
    {% endif %}
  </div>
  <div class="form-group">
    <input name="last_name"
      type="text"
      required="true"
      {% if form.last_name|default(None) %}
      class="form-control{% if form.last_name.errors %} is-invalid{% endif %}"
      {% else %}
      class="form-control"
      {% endif %}
      maxlength="64"
      placeholder="{{ _('Last name') }}"
      {% if form.last_name|default(None) and form.last_name.value() %}
      value="{{ form.last_name.value() }}"
      {% endif %}
    />
    {% if form.last_name|default(None) and form.last_name.errors %}
    <p class="invalid-feedback">{{ form.last_name.errors[0] }}</p>
    {% endif %}
  </div>
  <button type="submit" class="btn btn-primary w-100">
    {{ _('Continue') }}
  </button>
</form>
